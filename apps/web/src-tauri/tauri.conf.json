{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "krypt-vault",
  "version": "0.1.0",
  "identifier": "com.krypt-vault.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "krypt-vault",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:3000 https://api.ayushk.me; connect-src 'self' http://localhost:3000 http://127.0.0.1:3000 https://api.ayushk.me; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; img-src 'self' data: blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
